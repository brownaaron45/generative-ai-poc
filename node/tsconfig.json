  "compilerOptions": {
    "module": "Node16",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "ESNext"
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", ".eslintrc.js"],
  "exclude": ["node_modules"]
}
